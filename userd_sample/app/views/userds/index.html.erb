<p id="notice"><%= notice %></p>

<h1>Userds</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Grade</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @userds.each do |userd| %>
      <tr>
	<td><%= userd.id %></td>
        <td><%= userd.name %></td>
        <td><%= userd.grade %></td>
        <td><%= userd.deleted_at %></td>
        <td><%= link_to 'Show', userd %></td>
        <td><%= link_to 'Edit', edit_userd_path(userd) %></td>
        <td><%= link_to 'Destroy', userd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td><%= link_to 'restore', userd, method: :restore1, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

