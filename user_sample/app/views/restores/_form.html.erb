<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :user_user_id %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :grade %>
    <%= form.select :grade,[["B1", "B1"], ["B2", "B2"],["B3", "B3"], ["B4", "B4"],["M1", "M1"], ["M2", "M2"]], id: :user_grade %>
  </div>

  <div class="field">
    <%= form.label :registered_at %>
    <%= form.datetime_select :registered_at, id: :user_registered_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
