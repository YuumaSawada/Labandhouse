<p id="notice"><%= notice %></p>

<h1>消去済ユーザ一覧</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>学年</th>
      <th>消去日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dusers.each do |duser| %>
      <tr>
        <td><%= duser.id %></td>
        <td><%= duser.name %></td>
        <td><%= duser.grade %></td>
        <td><%= duser.deleted_at %></td>
        <td><%= link_to '復元', duser,method: :delete, data: { confirm: '本当に復元しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

